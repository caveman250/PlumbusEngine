    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Debug",
            "command": "cmake",
            "args": [
                "--build",
                ".",
                "-j8"
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin/Debug"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Clean Debug",
            "command": "cd PlumbusTester && make clean && cd ../Engine && make clean",
            "args": [
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin/Debug/"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Uber Clean Debug",
            "command": "cmake",
            "args": [
                "--build",
                ".",
                "--target",
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin/Debug/"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
